<Window x:Class="WPF_Browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Browser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="113*"/>
            <ColumnDefinition Width="594*"/>
            <ColumnDefinition Width="93*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="174*"/>
        </Grid.RowDefinitions>
        <TextBox Name="search" Grid.Column="1" HorizontalAlignment="Left" Margin="10,52,0,0" Text="https://" TextWrapping="Wrap" VerticalAlignment="Top" Width="510" Height="18"/>
        <Button Name="searchButton" Content="Поиск" Grid.Column="1" HorizontalAlignment="Left" Margin="520,52,0,0" VerticalAlignment="Top" Height="18" Width="38" Click="Search"/>
        <TabControl Name="tabControl" Grid.Row="1" Grid.Column="1" Loaded="TabControlLoad" MouseDoubleClick="TabMouseDoubleClick">

        </TabControl>
    </Grid>
</Window>
